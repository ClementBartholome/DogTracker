@using DogTracker.Models

<MudCard Style="height: 100%">
    <MudCardContent>
        <MudText TextStyle="TextStyle.H6" class="mb-3">
            Détails de la promenade
        </MudText>

        <div class="flex-grow-1">
            <MudStack Gap="1rem">
                <div>
                    <MudText TextStyle="TextStyle.Subtitle2">Date et heure</MudText>
                    <MudText TextStyle="TextStyle.Body2">
                        @Walk.StartTime.ToString("dd/MM/yyyy HH:mm")
                    </MudText>
                </div>

                <div>
                    <MudText TextStyle="TextStyle.Subtitle2">Durée</MudText>
                    <MudText TextStyle="TextStyle.Body2">
                        @((Walk.EndTime - Walk.StartTime).TotalMinutes.ToString("F0")) minutes
                    </MudText>
                </div>

                <div>
                    <MudText TextStyle="TextStyle.Subtitle2">Distance</MudText>
                    <MudText TextStyle="TextStyle.Body2">
                        @Walk.Distance.ToString("F2") km
                    </MudText>
                </div>

                <div>
                    @* <MudText TextStyle="TextStyle.Subtitle2">Vitesse moyenne</MudText> *@
                    @* <MudText TextStyle="TextStyle.Body2"> *@
                    @*     @(((Walk.Distance / (Walk.EndTime - Walk.StartTime).TotalHours)).ToString("F1")) km/h *@
                    @* </MudText> *@
                </div>
            </MudStack>
        </div>

        <div class="d-flex justify-content-end mt-3">
            <MudButton Variant="Variant.Filled">Fermer</MudButton>
        </div>
    </MudCardContent>
</MudCard>

@code {
    [Parameter]
    public Walk Walk { get; set; }
}